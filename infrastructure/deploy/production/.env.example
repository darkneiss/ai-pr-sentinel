# Runtime image published by CI/CD (GHCR, ECR, etc.)
API_IMAGE=ghcr.io/your-org/ai-pr-sentinel-api:latest

# Public domain pointing to the Lightsail static IP
SERVER_NAME=api.example.com

# Internal API container port
API_INTERNAL_PORT=3000

# Start false for first boot, then true after issuing certificates
NGINX_TLS_ENABLED=false

# Used in certbot command examples
LETSENCRYPT_EMAIL=you@example.com
